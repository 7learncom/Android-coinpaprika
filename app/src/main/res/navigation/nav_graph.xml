<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/coinListFragment">

    <fragment
        android:id="@+id/coinListFragment"
        android:name="com.mhd.coinpaprika.list.CoinListFragment"
        android:label="CoinListFragment"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_coinListFragment_to_coinDetailFragment"
            app:destination="@id/coinDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/coinDetailFragment"
        android:name="com.mhd.coinpaprika.detail.CoinDetailFragment"
        android:label="CoinDetailFragment"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="coinId"
            app:argType="integer" />
    </fragment>
</navigation>